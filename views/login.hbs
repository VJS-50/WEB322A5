    <body class="colorBackground">
        <div class="formdiv">
        <div class="loginForm">
            
            <form action='/login_post' method="POST" enctype="application/x-www-form-urlencoded">
                <img src="https://clients.whc.ca/templates/hwc-six/img/picto-whc.svg">
                <h3>Sign In</h3>
                <div class="input-group form-group">
                    <input type="text" class="form-control" name="username_field" placeholder="username/email" required>
                    {{#if error.userErr}}
                    <div style="color: red;">{{error.userErr}}</div>
                    {{/if}}
                </div>
                <div class="input-group form-group">
                    <input type="password" class="form-control" name="password_field" placeholder="password" required>
                    {{#if error.passErr}}
                      <div style="color: red;">{{error.passErr}}</div>
                      {{/if}}
                </div>
                <div class="row remember">
                    <input type="checkbox">Remember Me
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary btn-lg" name="btn_login">
                </div>
                <div class="loginFooter">
                    Don't have an account?<a href="/register">Sign Up</a>
                    <br>
                    <a href="#">Forgot your password?</a>
                </div>
            </form>
        </div>
        </div>
    </body>
    
